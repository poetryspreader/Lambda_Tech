git {
    git initialization: {
        git init
        git config --global user.name "name"
        git config --global user.email example@yandex.com
    }

    file tracking:
        git add -A
        git rm --cached <src/fileName>
    
    file commiting: 
        git commit -a -m"nameOfCommit"

    file connecting to gitHub: 
        git remote add origin yourLink

    file pushing: 
        git push -u origin master     ->
        -> git push  

    //: 
        git status
        git log

    --------------------------------------------------------------------

    other pc:

    find pulling folder {
        cd..
        cd nameOfTheFolder
    }   

    git repository pulling: 
        git clone linkOfTheRepository secondFolderName
        git pull
    } 
}

npm {
    downloading node js
    npm init
    npm install nameOfPackage
    
    nodemon {
        npm install -g nodemon
        npm install --save-dev nodemon
    }
    gulp {
        npm i gulp
        npm i gulp --save-dev
        npm install gulp-cli -g
        -> npm install gulp-cli --save-dev /ëîêàëüíàÿ óñòàíîâêà/
        npm i gulp-sass --save-dev /êîìïèëÿöèÿ sass/    
        npm i gulp-autoprefixer --save-dev
        npm i fulp-clean-css --save-dev
    }
    browser-sync /ñèíõðîíèçàöèÿ ñ áðàóçåðîì/{
        npm install -g browser-sync
        -> npm install --save-dev browser-sync
    }
    sass {
    npm i sass --save-dev
    }
}

